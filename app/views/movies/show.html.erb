<h1 class="ui header center"><%= @movie.title %></h1>
<br />
<div class="video center">
  <iframe src="<%= @movie.trailer %>?set=3" class="space"></iframe>
</div>
<br />
<br />
<div class="center">
    <%= link_to '<i class="thumbs up icon"></i>'.html_safe, movie_like_path(@movie) %>
    <%= @movie.like %>
    
    <%= link_to '<i class="thumbs down icon"></i>'.html_safe, movie_dislike_path(@movie) %>
    <%= @movie.dislike %>
</div>
<hr />
<%= link_to 'Create New Comment', new_movie_comment_path(@movie) %>
<h3>User comments for: <%= @movie.title %></h3>
<% @movie.comments.each do |comment| %>
 <%= comment.username %> | <%= comment.body %>
 <%= link_to 'Edit', edit_movie_comment_path(comment.movie_id) %> |
 <%= link_to 'Delete', [@movie, comment], method: :delete %>
 <hr />
<% end %>
